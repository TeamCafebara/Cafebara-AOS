<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.omg.cafebara.presentation.employee.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcv_home_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/bnv_top_line"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bnv_top_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray1"
            app:layout_constraintBottom_toTopOf="@id/bnv_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnv_home"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottom_navi_height"
            android:background="@color/white"
            android:theme="@style/TextAppearance.LabelSmall"
            app:itemActiveIndicatorStyle="@android:color/transparent"
            app:itemBackground="@android:color/transparent"
            app:itemPaddingTop="9dp"
            app:itemRippleColor="@android:color/transparent"
            app:itemTextAppearanceActive="@drawable/menu_selector_icon_color"
            app:itemTextAppearanceInactive="@drawable/menu_selector_icon_color"
            app:itemTextColor="@drawable/menu_selector_icon_color"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bnv_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>