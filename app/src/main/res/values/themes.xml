<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cafebara" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:includeFontPadding">false</item>
<!--        <item name="android:background">@color/background</item>-->
    </style>

    <style name="Theme.Cafebara" parent="Base.Theme.Cafebara" />

    <!--  Widget  -->
    <style name="Widget.Material.Button.Basic" parent="">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.FullButton.Basic" parent="Widget.Material.Button.Basic">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.OutlinedButton.Basic" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:width">0dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="custom_switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/white</item>
        <item name="trackColor">@color/gray2</item>
        <item name="android:enabled">true</item>
    </style>
</resources>